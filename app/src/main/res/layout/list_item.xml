<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_margin="3dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_gravity="center|left"
        tools:src="@drawable/twisterbar"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/EditorNameTextView"
            android:hint="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/EditorRegularTextView"
                android:layout_marginLeft="3dp"
                android:text="SEK " />

            <TextView
                android:id="@+id/tv_price"
                style="@style/EditorRegularTextView" />

            <TextView
                style="@style/EditorRegularTextView"
                android:layout_marginRight="3dp"
                android:text=":- " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/EditorRegularItalicTextView"
                android:layout_marginRight="3dp"
                android:text="Quantity Available: " />

            <TextView
                style="@style/EditorRegularItalicTextView"
                android:id="@+id/tv_quantity_in_stock"
                android:layout_marginBottom="3dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sellItem"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="56dp"
        android:layout_margin="3dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/shoppingcart" />

</LinearLayout>